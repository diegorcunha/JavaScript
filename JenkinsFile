pipeline {
     environment {
        registry = "gcr.io/analog-pilot-238717/testscript"
        registryCredential = 'analog-pilot-238717'
        dockerImage = ''
      }

    agent {
    kubernetes {
      cloud 'kubernetes'
      label 'docker-slave'
      defaultContainer 'docker-slave'
      }
    }
   stages{
      stage('Build') {
        steps {
          echo "Build docker image"
          script {
            dockerImage = docker.build registry + ":$BUILD_NUMBER"
       
                }
            }
        }
        
      stage('Publish') {
          steps {
          echo "Publish the Image"
          script{
              withDockerRegistry([credentialsId: 'analog-pilot-238717', url: 'gcr.io/analog-pilot-238717/testscript']) {
              dockerImage.push($BUILD_NUMBER)
              }
             }
            }
          } 
        
      }
}
