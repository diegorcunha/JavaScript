#!groovy
library 'pipeline-utils'

configureSlack('#superstars-notify')

pipeline {

    agent {
        kubernetes {
            cloud 'kubernetes'
            label 'docker-slave'
            defaultContainer 'docker-slave'
        }
    }


        stage('Build') {
            steps {
                script {
                   image = docker.build("gcr.io/analog-pilot-238717/testscript:${BUILD_NUMBER}","-f Dockerfile ${BUILD_NUMBER}")
                }
            }
            
        }

        stage('Publish') {
            steps {  
                dockerPublish(image,version)
            }
        }
        // We should talk about this... Ass: Eric
        // stage('Api Test') {
        //     when { branch "develop" }
        //     steps {  
        //         script{
        //             image.inside{
        //                 sh 'npm install'
        //                 sh 'npm run test-api'
        //             }
        //         }
        //     }
        // }      
    }

}
