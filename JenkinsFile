pipeline {
    agent {
    kubernetes {
      cloud 'kubernetes'
      label 'docker-slave'
      defaultContainer 'docker-slave'
      }
    }
   stages{
      stage('Build') {
        steps {
          echo "Build docker image"
          script {
            dockerImage = docker.build registry + ":$BUILD_NUMBER"
            pipelineContext.dockerImage = dockerImage
                }
            }
        }
}
